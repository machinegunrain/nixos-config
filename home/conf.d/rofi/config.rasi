configuration {
    modi:                           "run,drun";
    lines:                          10;
    columns:                        1;
    font:                           "PragmataPro 12";
    bw:                             0;
    location:                       0;
    padding:                        0;
    fixed-num-lines:                true;
    show-icons:                     false;
    sidebar-mode:                   true;
    separator-style:                "none";
    hide-scrollbar:                 true;
    fullscreen:                     false;
    fake-transparency:              false;
    scroll-method:                  0;
    window-format:                  "[{w}] ¬∑¬∑¬∑ {c} ¬∑¬∑¬∑   {t}";
    click-to-exit:                  true;
    show-match:                     false;
    combi-hide-mode-prefix:         false;
    display-window:                 "Ôë´";
    display-windowcd:               "b";
    display-drun:                    "ÔÑÅ";
    display-run:                    "Ôî∫";
    display-ssh:                    "üÖÇ";
    display-combi:                  "";
}

@import "styles/nord-light.rasi"

* {
    background-color:             	@bg;
}

window {
    border: 						0px;
    border-color: 					@bg;
    border-radius: 					0px;
    padding: 						5px;
    width: 							20%;
    background-color:               @bg;
}

prompt {
    spacing: 						0;
    border: 						0;
    text-color: 					@text-acc;
}

textbox-prompt-colon {
    expand: 						false;
    str: 							"";
    margin:						7px 3px 3px 3px;
    text-color: 					inherit;
}

entry {
    spacing:    					0;
    text-color: 					@text-acc;
    placeholder-color:    @text-light;
}

case-indicator {
    spacing:    					0;
    text-color: 					@red;
}

inputbar {
    spacing:    					0px;
    text-color: 					@text-acc;
    padding:    					5px 0px 0px 0px;
    children: 						[ prompt,textbox-prompt-colon,entry,case-indicator ];
}

mainbox {
    border: 						0px;
    padding: 						2;
}

listview {
    fixed-height: 					0;
    border: 						0px;
    spacing: 						1px;
    scrollbar: 						false;
    padding: 						0px 3px 3px 3px;
}

element {
    background-color:               @bg;
    padding:                        4px 5px 4px 5px;
}

element normal.normal {
    text-color:       @text-normal;
    background-color:               @bg;
}
element normal.urgent {
    text-color:       @red;
}
element normal.active {
    text-color:       @red;
}
element selected.normal {
    background-color:  @bg-selected;
    text-color:        @text-selected;
}

element selected.urgent {
    text-color:       				@red;
}
element selected.active {
    text-color:       				@red;
}
element alternate.normal {
    text-color:       				@text-normal;
    background-color:               @bg;
}
element alternate.urgent {
    text-color:       				@red;
}
element alternate.active {
    text-color:       				@red;
}

sidebar {
    border:       					0px;
    border-color: 					@red;
    border-radius: 					0px;
}

button {
    background-color:             	@bg;
    margin: 						5px;
    padding: 						5px 5px 5px 5px;
    text-color: 					@text-normal;
}

button selected {
    text-color: 					@text-selected;
    background-color:             	@text-light;

}

scrollbar {
    width:        					3px;
    border:       					0px;
    handle-color: 					@red;
    handle-width: 					6px;
    padding:      					0;
}

message {
    border: 						0px;
    border-color: 					@red;
    padding: 						0px;
}

textbox {
    text-color: 					@red;
}
